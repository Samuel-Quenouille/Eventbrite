<h1>C'est ici pour créer ton event !</h1>
<p>Remplis le formulaire ci-dessous</p>
<br /> <br />

<main class= "container">
<%= form_tag url_for(action: 'create'), method: "post", authenticity_token: true do %>
    
  <div class="col">
    <%= label_tag 'Titre' %>
    <br/>
    <%= text_field_tag 'title' %>
  </div>
      <br /> <br />

  <div class="col">
    <%= label_tag 'Description' %>
    <%= text_area_tag 'description', '', class: 'form-control', id: 'floatingTextarea2', style: 'w-100px' %>
  </div> 
      <br /> <br />

  <div class="col">
    <%= label_tag 'Date de début' %>
    <br/>
    <%= text_field_tag 'start_date' %>
  </div>

  <div class="col">
    <%= label_tag 'Durée' %>
    <br/>
    <%= text_field_tag 'duration' %>
  </div>

  <div class="col">
    <%= label_tag 'Prix' %>
    <br/>
    <%= text_field_tag 'price' %>
  </div>

   <div class="col">
    <%= label_tag 'Lieu' %>
    <br/>
    <%= text_field_tag 'location' %>
  </div>

  <div class="col">
    <%= submit_tag "Créer un event", class: "btn btn-danger" %>
  </div>
<% end %>
</main>
